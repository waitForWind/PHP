/**找回密码**/
#getPwd {
    background: url("./images/vip_modify_icon.png") no-repeat scroll 0 0 transparent;
    height: 290px;
    margin: 30px auto 0;
    position: relative;
    width: 393px;
}

#caption {
    color: #2D2B5D;
    font-size: 14px;
    font-weight: bold;
    height: 24px;
    left: 70px;
    line-height: 24px;
    position: absolute;
    top: 20px;
    width: 80px;
}
#tips {
    color: #FF5400;
    height: 24px;
    left: 60px;
    line-height: 24px;
    position: absolute;
    text-align: center;
    top: 100px;
    width: 280px;
}
.success {
    background: url("./images/vip_modify_icon.png") no-repeat scroll -204px -296px transparent;
    height: 70px;
    left: 196px;
    margin-left: -35px;
    position: absolute;
    top: 58px;
    width: 69px;
}
.mail_color {
    color: #68779D;
}
.check_tips {
    height: 132px;
    margin: 0 auto;
    padding-top: 135px;
    width: 295px;
}
.reset_tips {
    height: 132px;
    margin: 0 auto;
    padding-top: 62px;
    width: 295px;
}
.reset_tips li, .check_tips li {
    line-height: 26px;
    list-style: none outside none;
}
.user_mail {
    padding: 30px 0 10px;
}
.submit_btn {
    text-align: center;
}
.submit_btn input {
    background: url("./images/vip_modify_icon.png") no-repeat scroll -112px -296px transparent;
    border: medium none;
    color: #FFFFFF;
    cursor: pointer;
    height: 34px;
    width: 86px;
}
.user_text, .reset_text {
    border: 1px solid #A9B7CF;
    height: 22px;
    line-height: 22px;
    padding: 1px;
    width: 220px;
}
.lightText {
    color: #FF5400;
}
#getPwd input[type='text']{
	border: 1px solid #CCCCCC;
	height: 16px;
    padding: 2px 5px;
}

/*登录页面*/

.login_submit{margin:0px 0px 33px 0px;border:none;background:url(../images/login_bg.png) no-repeat -12px -12px; height:45px;width:105px; padding:0px;cursor: pointer;}
.login_submit:hover{background: url(../images/login_bg.png) no-repeat -120px -12px; height:45px;width:105px; padding:0px;}

.apply_reg:hover{ display:block;background: url(../images/apply_account.png) no-repeat -115px 0px; height:35px;width:99px; padding:0px;margin-left:5px;}
.apply_reg{ display:block;background: url(../images/apply_account.png) no-repeat 0px 0px; height:35px;width:99px; padding:0px;float: left; margin-left:5px;}

